{
  "manifest_version": 3,
  "name": "Web Helper Chrome Extension",
  "version": "1.0.0",
  "description": "Webページでの作業を効率化するChrome拡張機能",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "content_scripts": "script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; object-src 'self';"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Helper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}